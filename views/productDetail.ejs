<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->
    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->

    <!-- ##### Single Product Details Area Start ##### -->
    <section class="single_product_details_area d-flex align-items-center">

        <!-- Single Product Thumb -->
        <div class="single_product_thumb clearfix">
            <div >
                
                <img class = "imglibrodetail" src="/essence/img/product-img/<%= libro.portada %>" alt="">
                
            </div>
        </div>
      
        <!-- Single Product Description -->
        <div class="single_product_desc clearfix">
            <span><%= libro.autor %></span>
           
                <h2><%= libro.titulo %></h2>
            
            <% if(libro.categoria){%>
                <span> <h3>Categor√≠a: </span> <%= libro.categoria.nombre %> </h3>
           <% } %>
           
            <p class="product-price">$ <%= libro.precio %></p>
            <p class="product-desc"><%= libro.descripcion %></p>

            <!-- Form -->
            <form class="cart-form clearfix" method="post">
                <!-- Select Box -->
              
                <!-- Cart & Favourite Box -->
                <div class="cart-fav-box d-flex align-items-center">
                    <!-- Cart -->
                    <button type="submit" name="addtocart" value="" class="btn essence-btn">Agregar al carrito</button>
                   
                </div>
            </form>
        </div>

    </section>
 
  <!-- ##### Single Product Details Area End ##### -->

     <!-- ##### Footer Area Start ##### -->
     <%- include("./partials/footer") %>
     <!-- ##### Footer Area End ##### -->
 
     <!-- jQuery (Necessary for All JavaScript Plugins) -->
     <script src="/essence/js/jquery/jquery-2.2.4.min.js"></script>
     <!-- Popper js -->
     <script src="/essence/js/popper.min.js"></script>
     <!-- Bootstrap js -->
     <script src="/essence/js/bootstrap.min.js"></script>
     <!-- Plugins js -->
     <script src="/essence/js/plugins.js"></script>
     <!-- Classy Nav js -->
     <script src="/essence/js/classy-nav.min.js"></script>
     <!-- Active js -->
     <script src="/essence/js/active.js"></script>


   </body>
 </html>
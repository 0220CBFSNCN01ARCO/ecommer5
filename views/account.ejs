<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->

    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->
    
    <div class = "container col-12">
        <div class = "avataradmin row col-6">
            <img class = "imguser" src = "/essence/img/users-img/<%= data.avatar %>">  
    
        </div>
    
        <div class="infoadmin row contact-area d-flex align-items-center">
    
        
            <div class="row contact-info col-6">
                <h2>Hola <%= data.nombre %> !</h2>
    
                <div class=" mt-5">
                    <p class = "datosadmin"><strong>Usuario: </strong>  <%= data.nombre %></p>
                    <p class = "datosadmin"><strong>Email: </strong><%= data.email %> </p>
                    <p class = "datosadmin"><strong>Dirección: </strong><%= data.direccion %> </p>
                    <p class = "datosadmin"><strong>Provincia: </strong><%= data.provincia %> </p>
                    <p class = "datosadmin"><strong>Localidad: </strong><%= data.localidad %> </p>
                    <p class = "datosadmin"><strong>Código Postal: </strong><%= data.cp %> </p>
                </div>
            </div>
        <div class = "editproduct row col-12">
         <h4 class = "hacer col-12">¿Qué querés hacer?</h4>
         <a  href="/products" class="create btn essence-btn">Ver productos </a> <br>
         <a  href="/users/logout" class="create btn essence-btn">Cerrar Sesión </a> <br>

        </div>
                
        
          
        </div>




    </div>
    

    

    <!-- ##### Footer Area Start ##### -->
    <%- include("./partials/footer") %>
    <!-- ##### Footer Area End ##### -->


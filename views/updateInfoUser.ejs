<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->
    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->

    <!-- ##### Breadcumb Area Start ##### -->
    <div class="tituloregistra breadcumb_area bg-img" style="background-image: url(/essence/img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Actualizá tus datos</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Checkout Area Start ##### -->
    <div class="checkout_area section-padding-80">
        <div class="container">
            <div class="row">

                <div class="col-6 col-md-6">
                    <div class="checkout_details_area mt-10 clearfix">
                     
                        <div class="cart-page-heading mb-30">
                            <h5>Datos de contacto</h5>
                        </div>

                        <% if (typeof errors != 'undefined') { %>
                            <p class = "error" style="color:red">ALGO SALIÓ MAL:</p>

                            <ul>
                                <% for (let i = 0; i < errors.length; i++) { %>
                                    <li>
                                        <%=errors[i].msg%>
                                    </li>
                               <% } %>
                            </ul>
                        <% } %>

                        <div class="errores">
                            <ul></ul>
                        </div>
            
                        <form action = "/users/update/<%= data.idusuario %>?_method=PUT" class = "registeruser" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="nombre">Nombre y apellido<span>*</span></label>
                                    <input type="text" class="form-control" id="camponombre" name = "nombre" value="<%= data.nombre%>" required placeholder="Nombre y apellido">
                                    <ul class = "ulnombreactualizacion" style="color:red">

                                    </ul>
                                    
                                </div>
                              
                                
                                <div class="col-12 mb-3">
                                    <label for="provincia">Provincia <span>*</span></label>
                                    <select class="w-100 provincia" id="campoprovincia" name= "provincia">
                                        <option value="" selected>Seleccioná tu provincia</option>
                                        <option value = "Córdoba">Córdoba</option>
                                        <option value = "Buenos Aires">Buenos Aires</option>
                                        <option value = "Santa Fe" >Santa Fe</option>
                                        <option value = "Jujuy">Jujuy</option>
                                        <option value = "Salta">Salta</option>
                                        <option value = "Tucumán">Tucumán</option>
                                        <option value = "Santiago del Estero"> Santiago del Estero</option>
                                        <option value = "San Juan">San Juan</option>
                                        <option value = "Corrientes">Corrientes</option>
                                        <option value = "Misiones">Misiones</option>
                                        <option value = "La Pampa">La Pampa</option>
                                        <option value = "Entre Ríos">Entre Rios</option>
                                        <option value = "Chubut">Chubut</option>
                                        <option value = "Tierra del Fuego">Tierra del Fuego</option>
                                        <option value = "Chaco">Chaco</option>
                                        <option value = "Mendoza">Mendoza</option>
                                        <option value = "San Luis">San Luis</option>
                                        <option value = "La Rioja">La Rioja</option>
                                        <option value = "Formosa">Formosa</option>
                                        <option value = "Catamarca">Catamarca</option>
                                        <option value = "Neuquén">Neuquen</option>
                                        <option value = "Río Negro">Rio Negro</option>
                                    </select>
                                    <ul class = "ulprovinciaactualizacion" style="color:red">

                                    </ul>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="localidad">Localidad <span>*</span></label>
                                    <input type="text" class="form-control" name= "localidad" id="campolocalidad" value="<%= data.localidad%>" required placeholder="Localidad">
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="direccion">Dirección <span>*</span></label>
                                    <input type="text" class="form-control mb-3" id="campodireccion" name= "direccion" value="<%= data.direccion%>" required placeholder="Calle y número">
                                
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="cp">Código Postal <span>*</span></label>
                                    <input type="number" class="form-control" name= "cp" id="campocp" value="<%= data.cp%>" required placeholder="Código Postal">
                                </div>
                              
            
                                <div class="col-12 mb-4">
                                    <label for="email">Email <span>*</span></label>
                                    <input type="email" class="form-control" name= "email" id="campoemail" value="<%= data.email%>" required placeholder="Email">
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="password">Contraseña <span>*</span></label>
                                    <input type="password" class="form-control" name= "password" required id="campopassword" min="0" value="" placeholder="Contraseña">
                                </div>
                                <div class="col-12 mb-4">
                                    <label for="avatar">Subí tu foto de perfil</label> <br>
                                    <input type="file" name= "avatar" id="campoavatar" value="<%= data.nombre%>">
                                </div>
                                <div class="col-12">
                                    
                                    <button type = "submit" class="btn essence-btn">Actualizar información</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
           
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Checkout Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include("./partials/footer") %>
    <!-- ##### Footer Area End ##### -->

    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="/essence/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/essence/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/essence/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/essence/js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="/essence/js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="/essence/js/active.js"></script>
    <script src="/essence/javascript/js-front.js" type = "text/javascript"></script>

</body>

</html>
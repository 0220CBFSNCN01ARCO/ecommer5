<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->

    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->
    <div class="titulocarga breadcumb_area bg-img" style="background-image: url(/essence/img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Edici√≥n de productos</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
<div class = "container tablalibros">
    <% for(let i = 0; i < libros.length; i++) { %>
<table class= "celdaslibros row col-12">
    <thead>
     <tr>
        <th>Portada</th>
         <th>Titulo</th>
         <th>Autor</th>
         <th>Precio</th>
         <th>Stock</th>
     </tr>

    </thead>
    <tbody>
        <tr>
            <td class = "itemportada"><img class="portadaedit"
                src="/essence/img/product-img/<%= libros[i].portada %>"
                alt=""/></td>
            <td class = "itemedit"><%= libros[i].titulo%></td>
      
            <td class = "itemedit"><%= libros[i].autor%></td>
           
            <td class = "itemnumero"><%= libros[i].precio%></td>
           
            <td class = "itemnumero"><%= libros[i].stock%></td>
            <td class = "itemicono">
            <form action = "/admin/delete/<%= libros[i].idlibros %>?_method=PUT" method = "POST">
                <input type = "submit"><img class= "iconoedit" src= "/essence/img/images/lapizedit.png"></input>
            </form>
            
                 <form action = "/admin/delete/<%= libros[i].idlibros %>?_method=DELETE" method = "POST">

                <input type = "submit"><img class = "iconodelete" src= "/essence/img/images/delete.png"></input>
            </form>
        </td>
        </tr>
    </tbody>
    
</table>
<% } %>
</div>


  


 






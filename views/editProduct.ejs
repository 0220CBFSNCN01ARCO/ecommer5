<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->

    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->
    <div class="titulocarga breadcumb_area bg-img" style="background-image: url(/essence/img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Edición de productos</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
<div class = "container tablalibros">

<table class= "celdaslibros col-12 table table table-responsive">
    <thead>

     <tr>
    <th class = "itemportada">Portada</th>
      <th scope="col">Título</th>
      <th scope="col">Autor</th>
      <th scope="col">Categoría</th>
      <th scope="col">Precio</th>
      <th scope="col">Stock</th>
      <th scope="col">Acción</th>
     </tr>

    </thead>
    <% for(let i = 0; i < libros.length; i++) { %>
    <tbody>
        <tr>
            
            <td class = "itemportada"><img class="portadaedit"
                src="/essence/img/product-img/<%= libros[i].portada %>"
                alt=""/></td>
            
            <td class = "itemedit"><%= libros[i].titulo%></td>
      
            <td class = "itemedit"><%= libros[i].autor%></td>

            <td class = "itemedit"><%= libros[i].categoria.nombre%></td>
           
            <td class = "itemnumero">$<%= libros[i].precio%></td>
           
            <td class = "itemnumero"><%= libros[i].stock%></td>
            <td class = "itemicono">
          
           

                <a class = "iconedit" href= "/admin/edit/<%= libros[i].idlibros %>"><i class=" iconoedit far fa-edit"></i></a>
                
                <a class = "icondelete" style="color:red" href= "/admin/delete/<%= libros[i].idlibros %>?_method=DELETE"><i class="iconodelete fas fa-trash-alt"></i></a>
            
                
         
                
        </td>
        </tr>
    </tbody>
    <% } %>
</table>

</div>


  


 





        <!-- ##### Footer Area Start ##### -->
    <%- include("./partials/footer") %>
    <!-- ##### Footer Area End ##### -->


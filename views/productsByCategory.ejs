<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>

  <body>
    <!-- ##### Header Area Start ##### -->
    <%- include("./partials/header") %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->
    <%- include("./partials/carrito") %>
    <!-- ##### Right Side Cart End ##### -->

    <!-- ##### Breadcumb Area Start ##### -->
    <div
      class="catalogo breadcumb_area bg-img"
      style="background-image: url(/essence/img/bg-img/breadcumb.jpg);"
    >
      <div class="container h-100">
        <div class="row h-100 align-items-center">
          <div class="col-12">
            <div class="page-title text-center">
    <h2>Libros de <%= categoria.nombre%></h2>
            </div>
          </div>
        </div>
      </div>
    </div>

 <div class="row">
                <!-- Single Product -->

                <% for(let i = 0; i < libros.length; i++) { %>
                
                <!-- Single Product -->
                <div class="listadoproducts col-12 col-sm-6 col-lg-4">
                 
                  <div class="single-product-wrapper contenedorproducto">
                  
                    <!-- Product Image -->
                    <div class="product-img">
                      <a href = "/products/detail/<%= libros[i].idlibros %>">
                        <img
                        class="imagenproducto"
                        src="/essence/img/product-img/<%= libros[i].portada %>"
                        alt=""/>
  
                      </a>
                      
                   
                    </div>
                    
                    <!-- Product Description -->
                    <div class="product-description">
                      <span><%= libros[i].autor %></span>
                      <a href="/product/detail/<%= libros[i].idlibros %>">
                        <h6><%= libros[i].titulo %></h6>
                      </a>
                      <p class="product-price">$<%= libros[i].precio %></p>

                      <!-- Hover Content -->
                      <div class="hover-content">
                        <!-- Add to Cart -->
                        <div class="add-to-cart-btn">
                          <a href="#" class="btn essence-btn agregar-carrito">Agregar al carrito</a >
                        </div>
                        
                      </div>
                 
                    </div>
               
                  </div>
               
                </div>

          
                <% } %>
          
              </div>



    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Shop Grid Area Start ##### -->
    <section class="shop_grid_area section-padding-80">
      
    </section>
    <!-- ##### Shop Grid Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include("./partials/footer") %>
    <!-- ##### Footer Area End ##### -->

    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="/essence/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/essence/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/essence/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/essence/js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="/essence/js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="/essence/js/active.js"></script>
  </body>
</html>